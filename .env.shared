# Variables de Entorno Compartidas - Sistema POS Restaurante
# Este archivo define las URLs y configuraciones comunes para todos los agentes

# =============================================================================
# AGENT SERVICE URLS
# =============================================================================
# Development URLs
# BACKEND_URL=http://localhost:3001
# AUTH_URL=http://localhost:3002  
# FRONTEND_URL=http://localhost:3000

# Production URLs - Hostinger VPS
BACKEND_URL=https://api.chapibot.pro
AUTH_URL=https://auth.chapibot.pro
FRONTEND_URL=https://pos.chapibot.pro
MONITORING_URL=https://monitor.chapibot.pro

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_pos_db
DB_USER=restaurant_user
DB_PASSWORD=restaurant_secure_password

# Redis para cache y sesiones
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# SECURITY & JWT
# =============================================================================
JWT_SECRET=your-ultra-secure-jwt-secret-key-change-in-production-2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt salt rounds (mínimo 12 según reglas de seguridad)
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# PERFORMANCE & RATE LIMITING
# =============================================================================
# Rate limiting: 100 requests/minute per IP (según reglas)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Performance thresholds (según reglas de performance)
PERFORMANCE_TABLE_SELECTION_MS=100
PERFORMANCE_ADD_PRODUCT_MS=150
PERFORMANCE_SEND_ORDER_MS=200
PERFORMANCE_PROCESS_PAYMENT_MS=300
PERFORMANCE_TABLE_STATUS_MS=50

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/restaurant-pos.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=https://pos.chapibot.pro,https://monitor.chapibot.pro,http://localhost:3000,http://127.0.0.1:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WEBSOCKET_URL=wss://api.chapibot.pro
WEBSOCKET_PATH=/socket.io

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
# Restaurant settings
RESTAURANT_NAME=Mi Restaurante POS
RESTAURANT_TIMEZONE=America/Mexico_City
CURRENCY=MXN
TAX_RATE=0.16

# Table states according to SoftRestaurant-like UX rules
TABLE_STATE_FREE=free
TABLE_STATE_OCCUPIED=occupied
TABLE_STATE_BILL=bill
TABLE_STATE_CLEANING=cleaning

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# NODE_ENV=development
# DEBUG_MODE=true
# ENABLE_SWAGGER_DOCS=true

# Production Configuration
NODE_ENV=production
DEBUG_MODE=false
ENABLE_SWAGGER_DOCS=true

# =============================================================================
# PRODUCTION OVERRIDES (uncomment for production)
# =============================================================================
# NODE_ENV=production
# DEBUG_MODE=false
# ENABLE_SWAGGER_DOCS=false
# FRONTEND_URL=https://your-domain.com
# BACKEND_URL=https://api.your-domain.com
# AUTH_URL=https://auth.your-domain.com