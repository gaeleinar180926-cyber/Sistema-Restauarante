# Variables de Entorno - Sistema POS Restaurante
# Copia este archivo como .env y configura los valores reales

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================
NODE_ENV=development
DEBUG_MODE=true

# =============================================================================
# PUERTOS DE SERVICIOS
# =============================================================================
PORT=3000
BACKEND_PORT=3001
AUTH_PORT=3002

# =============================================================================
# BASE DE DATOS
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_pos_db
DB_USER=restaurant_user
DB_PASSWORD=tu_password_seguro_aqui

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# SEGURIDAD Y JWT
# =============================================================================
JWT_SECRET=cambia_este_jwt_secret_por_uno_seguro_de_32_caracteres
JWT_EXPIRES_IN=24h
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# CONFIGURACIÓN DEL RESTAURANTE
# =============================================================================
RESTAURANT_NAME=Mi Restaurante POS
RESTAURANT_TIMEZONE=America/Mexico_City
CURRENCY=MXN
TAX_RATE=0.16

# =============================================================================
# URLS DE SERVICIOS
# =============================================================================
BACKEND_URL=http://localhost:3001
AUTH_URL=http://localhost:3002
FRONTEND_URL=http://localhost:3000
WEBSOCKET_URL=ws://localhost:3001

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/restaurant-pos.log

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# EMAIL (Para recuperación de contraseñas)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_app_password_aqui

# =============================================================================
# INTEGRACIONES EXTERNAS
# =============================================================================
PAYMENT_GATEWAY_KEY=tu_key_de_pasarela_de_pagos
PRINTER_IP=192.168.1.100